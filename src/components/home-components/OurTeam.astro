---
import SliderComponent from "./SliderComponent";
import { getCollection } from "astro:content";
import TeamSlider from "./TeamSlider";
const teams = await getCollection("teams");
---

<style>
  /* Add custom styles here */
  .carousel-container {
    overflow: hidden;
  }

  .carousel-inner {
    display: flex;
    transition: transform 0.3s ease-in-out;
  }

  .carousel-item {
    min-width: 100%;
    box-sizing: border-box;
  }
  @media only screen and (min-width: 1290px) {
    .prev {
      margin-left: -60px !important;
    }
    .next {
      margin-right: -60px !important;
    }
  }
</style>
<section data-aos="fade-up">
  <div class="flex flex-col items-center justify-center">
    <h3 class="uppercase text-xl font-bold text-[#111628] dark:text-white mb-4">
      OUR TEAM
    </h3>
    <h2
      class="text-4xl text-center max-w-[600px] font-medium text-black dark:text-white mb-9"
    >
      We are former CTOs, founders, researchers, and engineers.
    </h2>

    <!-- slider  -->
    <div class="relative max-w-5xl mx-auto rounded-xl mb-12">
      <TeamSlider teams={teams} client:load />
    </div>

    <div class="mb-24">
      <a
        href="/team"
        class="py-4 px-6 rounded-xl text-white bg-black dark:bg-white/5 inline-flex items-center gap-2"
        >Meet the team <span>
          <img src="icons/linkopen.svg" alt="" />
        </span>
      </a>
    </div>
  </div>
</section>
