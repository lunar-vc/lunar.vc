---
const { thoughts } = Astro.props;
---

<style>
  .secbg {
    position: absolute;
    bottom: -80px;
    right: 0;
    z-index: -1;
    opacity: 0.5;
  }

  .subtitle {
    font-size: 14px;
    font-weight: 700;
    line-height: 22px;
    letter-spacing: 1.4px;
    text-transform: uppercase;
  }

  .title {
    font-size: 24px;
    font-weight: 400;
    line-height: 150%;
    text-transform: capitalize;
  }

  .card {
    position: relative;
    border-radius: 14px;
    border: 1px solid#fff;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(6px);
  }

  .imgwrapper {
    position: relative;
    overflow: hidden;
  }

  .imgwrapper:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: linear-gradient(
      0deg,
      rgba(217, 41, 119, 0.5) 0%,
      rgba(217, 41, 119, 0) 49.77%
    );
    border-radius: 15px;
  }
</style>
<section class="relative z-10" data-aos="fade-up">
  <div class="max-w-5xl mx-auto py-6 md:py-24">
    <h2
      class="text-4xl text-center font-medium text-black mb-9 dark:text-white"
    >
      Our thoughts on the internet
    </h2>

    <!-- cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-24">
      <!-- card 1 -->
      {
        thoughts.map(({ data, ...rest }) => (
          <div class="p-3 relative bg-white/50 card  dark:bg-white/5 rounded-xl border-white backdrop-blur-sm dark:backdrop-blur-md hover:shadow-sm">
            <div class="max-h-60 mb-4 imgwrapper">
              <img src="demo2.png" class="w-full rounded-xl" alt="" />
            </div>
            <span class="subtitle overflow-hidden overflow-ellipsis text-wrap line-clamp-1 dark:text-white">
              {data.subTitle}
            </span>
            <h3 class="line-clamp-2 text-wrap text-2xl mb-2 dark:text-white title">
              {data.title}
            </h3>
            <div class="flex items-center justify-between">
